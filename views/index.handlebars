<header>
<img id="img" src="assets/img/burger.png"/>
<div>
<h1 class="title">EAT THE BURGER!</h1>
</div>

</header>

<section class="wrapper">
    <div class="not-devoured column">
        <h3>BURGERS READY TO BE DEVOURED!</h3>

            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{>burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
    </div>

    <div class="devoured column">
        <h3>DEVOURED BURGERS</h3>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{>burgers/burger-block devoured=true}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</section>

<div class="add">
    <h3>
        
        Add a Burger</h3>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="burger" name="burger_name" placeholder="NAME YOUR BURGER">
            <button type="submit">
                Add Burger
            </button>
            </div>

        </form>
</div>    
